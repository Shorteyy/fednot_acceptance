view: ereg_vw_dim_transaction {
  label: "Dim Transaction"
  sql_table_name: `dwh.ereg_vwDimTransaction`
    ;;

  dimension: is_main_transaction {
    description: "Flag to indicate whether the user has selected this transaction as the main transaction of the deed"
    type: string
    sql: ${TABLE}.isMainTransaction ;;
  }

  dimension: pk_ereg_transaction {
    hidden: yes
    primary_key: yes
    type: string
    sql: ${TABLE}.PK_EregTransaction ;;
  }

  dimension: transaction_id {
    description: "Technical identifier of the transaction generated by Landing Zone process (BI)"
    hidden: yes
    type: string
    sql: ${TABLE}.TransactionId ;;
  }

  measure: count {
    hidden: yes
    type: count
    drill_fields: []
  }
}
